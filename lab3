using System;
using System.Collections.Generic;

namespace MyApp
{
    internal class WorkWithLists
    {
        static void Main(string[] args)
        {
            List<int> checkListTrue = new List<int> { 1, 2, 3, 4, 5 };
            List<int> checkListFalse = new List<int> { 1, 2, 9, 3, 4, 0 };
            Console.WriteLine(CheckIfListIsSortedAscending(checkListTrue) ? "List1 is sorted":"List1 isn't sorted");
            Console.WriteLine(CheckIfListIsSortedAscending(checkListFalse) ? "List2 is sorted" : "List2 isn't sorted");
        }

        public static bool CheckIfListIsSortedAscending(List<int> intList) 
        {
            for (int i = 0; i < intList.Count - 1; i++)
            {
                if (intList[i] > intList[i + 1]) 
                { 
                    return false;
                }
            }
            return true;
        }
    }
}
